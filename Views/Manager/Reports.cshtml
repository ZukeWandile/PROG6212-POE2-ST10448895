@model ST10448895_CMCS_PROG.Models.ViewModels.ReportsViewModel

@{
    ViewData["Title"] = "Reports";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Claims Reports</h2>
        <a asp-action="Index" class="btn btn-secondary">Back to Dashboard</a>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h3>@Model.TotalClaims</h3>
                    <p>Total Claims</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h3>@Model.TotalAmount.ToString("C0")</h3>
                    <p>Total Value</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h3>@Model.ApprovedAmount.ToString("C0")</h3>
                    <p>Approved Payments</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Monthly Breakdown -->
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Monthly Breakdown</h5>
        </div>
        <div class="card-body">
            @if (Model.ClaimsByMonth.Any())
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Month</th>
                            <th>Claims</th>
                            <th>Total Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var month in Model.ClaimsByMonth)
                        {
                            <tr>
                                <td>@month.Month</td>
                                <td>@month.Count</td>
                                <td>@month.Amount.ToString("C")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p class="text-muted"><em>No claims data available.</em></p>
            }
        </div>
    </div>
</div>
