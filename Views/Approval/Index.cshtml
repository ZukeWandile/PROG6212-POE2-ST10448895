@model IEnumerable<ST10448895_CMCS_PROG.Models.ApprovalModel>

@{
    ViewData["Title"] = "Approval List";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-primary">➕ Create New</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(m => m.Id)</th>
                <th>@Html.DisplayNameFor(m => m.ClaimId)</th>
                <th>@Html.DisplayNameFor(m => m.CoordinatorId)</th>
                <th>@Html.DisplayNameFor(m => m.ManagerId)</th>
                <th>@Html.DisplayNameFor(m => m.DateVerified)</th>
                <th>@Html.DisplayNameFor(m => m.DateApproved)</th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.ClaimId)</td>
                        <td>@Html.DisplayFor(modelItem => item.CoordinatorId)</td>
                        <td>@Html.DisplayFor(modelItem => item.ManagerId)</td>
                        <td>@(item.DateVerified.HasValue? item.DateVerified.Value.ToString("dd MMM yyyy") : "Not Verified")</td>
                        <td>@(item.DateApproved.HasValue? item.DateApproved.Value.ToString("dd MMM yyyy") : "Not Approved")</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info me-1">Details</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="7" class="text-center text-muted">No approvals found.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
