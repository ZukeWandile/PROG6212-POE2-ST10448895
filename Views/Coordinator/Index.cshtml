@model ST10448895_CMCS_PROG.Models.ViewModels.DashboardViewModel

@{
    ViewData["Title"] = "Coordinator Dashboard";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Coordinator Dashboard - @ViewBag.CoordinatorName</h2>
        <div>
            <a asp-action="Verify" class="btn btn-warning">Verify Claims (@Model.PendingClaims)</a>
            <a asp-controller="Login" asp-action="Logout" class="btn btn-outline-secondary">Logout</a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <!-- Summary -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@Model.TotalClaims</h3>
                    <p>Total Claims</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@Model.PendingClaims</h3>
                    <p>Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@Model.VerifiedClaims</h3>
                    <p>Verified</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3>@Model.PendingAmount.ToString("C0")</h3>
                    <p>Pending Value</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Claims -->
    <div class="card">
        <div class="card-header">
            <h5>Recent Claims</h5>
        </div>
        <div class="card-body">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Lecturer</th>
                        <th>Amount</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var claim in Model.RecentClaims)
                    {
                        <tr>
                            <td>#@claim.Id</td>
                            <td>Lecturer @claim.LecturerId</td>
                            <td>@claim.TotalAmount.ToString("C")</td>
                            <td>@claim.SubmitDate.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge @(claim.Verified ? "bg-success" : "bg-warning")">
                                    @(claim.Verified ? "Verified" : "Pending")
                                </span>
                            </td>
                            <td>
                               
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>